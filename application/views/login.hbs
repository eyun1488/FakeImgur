<div class="container">
    <form class="formAlignment loginHeight" action="/users/login" method="POST"
        enctype="application/x-www-form-urlencoded">
        <label for="Username">Username</label>
        <input class="login" type="text" id="loginusername" name="username" placeholder="Enter Username" required>

        <label for="Password">Password</label>
        <input class="login" type="password" id="loginpassword" name="password" placeholder="Enter Password"
            minlength="8" required>

        <input class="submit button" type="submit" id="loginsubmit" value="Login"></input>
    </form>
</div>